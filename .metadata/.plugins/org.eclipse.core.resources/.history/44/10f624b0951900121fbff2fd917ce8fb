package shuffleCards;

public class card {

		public int values, suits;
		private static String[] value = {"2", "3", "4", "5", "6", "7", "8", "9", "10", "Jack", "Queen", "King", "Ace"};
		private static String[] suit = {"Hearts", "Diamonds", "spades", "Clubs"};
		public String printCard() {
	
		          return value[values] + " of " + suit[suits];
		}


		card(int values, int suits) {
			this.suits = suits;
			this.values = values;
			
			printCard();
			 
		}
		public int getValues(){
			return values;
		}
		public int getSuits() {
			return suits;
		}
		

}

class deck {
	deck() {
		int a = 0, b = 0;
		card cardObject = new card(a,b); 
		
		String[] deck = new String[52];
		int count = 0;
		for (int i = 0; i < 4; i++) {
			for (int j = 0; j < 13; j++) {
				deck[count] = cardObject;
				count++;
				b++;
			}
		a++;
	    }
 	}
}
