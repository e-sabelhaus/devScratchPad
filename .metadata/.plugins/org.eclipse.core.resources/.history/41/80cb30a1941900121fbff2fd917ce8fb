package shuffleCards;

class card {

		public int values, suits;
		private static String[] value = {"2", "3", "4", "5", "6", "7", "8", "9", "10", "Jack", "Queen", "King", "Ace"};
		private static String[] suit = {"Hearts", "Diamonds", "spades", "Clubs"};
		public static void printCard(String a, String b) {
			System.out.println(a + "Of" + b);
		}

		card(int values, int suits) {
			this.suits = suits;
			this.values = values;
			
			printCard(value[values], suit[suits]);
			 
		}

}

public class deck {
	public static void main (String[] args) {
		int a = 0, b = 0;
		card cardObject = new card(a,b); 
		
		String[] cards = new String[52];
		int count = 0;
		for (int i = 0; a < 4; i++) {
			for (int j = 0; b < 13; j++) {
				cards[count] = card(a,b);
				count++;
				b++;
			}
		a++;
	    }
 	}
}
