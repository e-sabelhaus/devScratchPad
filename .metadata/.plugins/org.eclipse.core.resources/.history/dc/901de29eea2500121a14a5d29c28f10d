package photoCorrecting;

import java.awt.Color;
import java.io.*;


public class PixelDecryptor {
	
    private int[] maxColorValue = null;
	private int pixelCount = (Integer) null;
    
    
	/**
     * This is all the file will do
     * 
     * parse picture1
     *  
     * Generate a toString for the output            
     *            
     * filter green and blue out
     * 
     * multiply red by 10
     * 
     * generate decrypted constructor
     * 
     * output data for picture2
     */
	
	PixelDecryptor(int newPixelCount, int[] newMaxColorValue, Color decryptPixel) {
		
	}
	
	public Color decryptPixel(Color pixel) {
		Color color = new Color(pixel.getRGB());
        int red = color.getRed();
        int green = color.getGreen();
        int blue = color.getBlue();
        int rDecrypt = red*10;
        int gDecrypt = green*0;
        int bDecrypt = blue*0;
        Color decryptedPixel = new Color(rDecrypt, gDecrypt, bDecrypt);
		return decryptedPixel;
	}
	public int getPixelCount() {
		return pixelCount;
	}
	
	public void setPixelCount(int newPixelCount) {
		pixelCount = newPixelCount;
	}
	
	public int[] getMaxColorValues() {
		return maxColorValue;	
	}
	
	public void setMaxColorValues(int[] newMaxColorValue) {
		maxColorValue = newMaxColorValue;	
		}
	public @Override String toString() {
		return "";
	}
}
