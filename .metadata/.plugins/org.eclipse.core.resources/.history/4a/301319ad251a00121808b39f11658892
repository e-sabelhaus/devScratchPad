package shuffleCards;

public class card {

		private int values, suits;
		private static String[] value = {"2", "3", "4", "5", "6", "7", "8", "9", "10", "Jack", "Queen", "King", "Ace"};
		private static String[] suit = {"Hearts", "Diamonds", "spades", "Clubs"};
		public String printCard() {
	
		          return value[values] + " of " + suit[suits];
		}


		card(int values, int suits) {
			this.suits = suits;
			this.values = values;
			
			printCard();
			 
		}
		public int getValues(){
			return values;
		}
		public int getSuits() {
			return suits;
		}
		

}

