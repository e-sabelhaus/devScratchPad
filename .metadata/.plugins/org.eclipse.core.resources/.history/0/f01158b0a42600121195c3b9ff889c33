package smallManufacturingCompany;

import javax.swing.JOptionPane;

public class TestOrders {

	/**
	 * @param args
	 * @throws Exception 
	 */
	public static void main(String[] args) throws Exception {
		String name = JOptionPane.showInputDialog("Input Client Name:");
		String sID = JOptionPane.showInputDialog("Input Order ID:");
		String sValue = JOptionPane.showInputDialog("Input Order Value:");
		String sInterest = JOptionPane.showInputDialog("Input Credit Order Interest Value:");
		
		int id = Integer.parseInt(sID);
		int value = Integer.parseInt(sValue);
		double interest = Double.parseDouble(sInterest);
		
		Order ord1 = new Order(name, id, value);
		CreditOrder cord1 = new CreditOrder(name, id, value, interest);
		
		ord1.toString();
		cord1.toString();
		
		int orderAmt = ord1.getOrderValue(value);
		double corderAmt = cord1.getOrderValue(value) * (cord1.getInterest(interest) + 1);
		
		
		System.out.println("Amount earned from Order: " + orderAmt);
		System.out.println("Amount earned from Order: " + corderAmt);
		
		
		
		
		
	}

}
